<?xml version="1.0" encoding="utf-8" ?>
<ParticleDeclarationTable>
	<ParticleDeclaration>
		<Name>Basic</Name>
		<Parameters>						
			<Parameter>
				<Name>Texture</Name>
				<Description>The texture used for this particle effect.</Description>
				<Category>General</Category>
				<Type>FilePath</Type>
				<DefaultValue>weapon_laser_red.png</DefaultValue>				
				<FilePathFilter>Image Files (*.png)|*.png|All files (*.*)|*.*</FilePathFilter>
			</Parameter>			
			<Parameter>
				<Name>EmitterLife</Name>
				<PrettyName>Emitter Life</PrettyName>
				<Description>The duration of this particle system, in seconds.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>0.0</DefaultValue>				
				<ValueStep>0.1</ValueStep>				
				<MinValue>0.0</MinValue>				
				<Parameters>
					<Parameter>
						<Name>Random</Name>
						<PrettyName>Random(+/-)</PrettyName>
						<Description>Amount of randomization for this parameter, as a fraction of the value. I.e, if random = 0.5 and the value is 5, the output value is randomized between [2.5, 7.5].</Description>
						<Type>Single</Type>
						<DefaultValue>0</DefaultValue>
						<ValueStep>0.01</ValueStep>
						<MinValue>0.0</MinValue>
						<MaxValue>1.0</MaxValue>
					</Parameter>
				</Parameters>
			</Parameter>
			<!--<Parameter>
				<Name>PlayOnce</Name>
				<PrettyName>Play Once</PrettyName>
				<Description>If true, play this effect once and then remove it.</Description>
				<Category>Emitter</Category>
				<Type>Boolean</Type>
				<DefaultValue>False</DefaultValue>				
				<Parameters/>
			</Parameter>-->
			<Parameter>
				<Name>ParticleLife</Name>
				<PrettyName>Particle Life</PrettyName>
				<Description>How long a particle will last, in seconds.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>1.0</DefaultValue>				
				<ValueStep>0.1</ValueStep>				
				<MinValue>0.0</MinValue>				
				<Parameters>
					<Parameter>
						<Name>Random</Name>
						<PrettyName>Random (+/-)</PrettyName>
						<Description>Amount of randomization for this parameter, as a fraction of the value. I.e, if random = 0.5 and the value is 5, the output value is randomized between [2.5, 7.5].</Description>
						<Type>Single</Type>
						<DefaultValue>0</DefaultValue>
						<ValueStep>0.01</ValueStep>
						<MinValue>0.0</MinValue>
						<MaxValue>1.0</MaxValue>
					</Parameter>
					<Parameter>
						<Name>GraphEmitter</Name>
						<PrettyName>Graph (Emitter)</PrettyName>
						<Description></Description>
						<Type>String</Type>
						<DefaultValue>lin:0.0:0.0,lin:1.0:1.0</DefaultValue>
						<!--
						
							EmitterLife,lin:0.0:0.0,lin:1.0:1.0
							
							0. Dependent parameter. If zero, x ranges from [0-inf). Else, x ranges from [0-1]. Y is bounded by the depended parameter's min/max value.
							N. Parameters:
								lin:x,y
								bez:x,y,lx,ly,rx,ry
						-->
					</Parameter>
					<Parameter>
						<Name>GraphParticle</Name>
						<PrettyName>Graph (Particle)</PrettyName>
						<Description></Description>
						<Type>String</Type>
						<DefaultValue></DefaultValue>
						<!--
							EmitterLife,lin:0.0:0.0,lin:1.0:1.0
							
							0. Dependent parameter. If zero, x ranges from [0-inf). Else, x ranges from [0-1]. Y is bounded by the depended parameter's min/max value.
							N. Parameters:
								lin:x,y
								bez:x,y,lx,ly,rx,ry
						-->
					</Parameter>
				</Parameters>				
			</Parameter>
			<Parameter>
				<Name>SpawnRate</Name>
				<PrettyName>Spawn Rate</PrettyName>
				<Description>How many particles are spawned per second.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>10.0</DefaultValue>				
				<ValueStep>0.1</ValueStep>
				<MinValue>0.0</MinValue>
				<MaxValue>1000.0</MaxValue>
			</Parameter>
			<Parameter>
				<Name>Direction</Name>
				<PrettyName>Direction</PrettyName>
				<Description>Direction of this emitter, in degrees.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>0.0</DefaultValue>				
				<ValueStep>1.0</ValueStep>
				<MinValue>0.0</MinValue>
				<MaxValue>360.0</MaxValue>				
			</Parameter>
			<Parameter>
				<Name>Range</Name>
				<PrettyName>Range</PrettyName>
				<Description>The range of the spread for this emitter, in degrees.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>360.0</DefaultValue>				
				<ValueStep>1.0</ValueStep>
				<MinValue>0.0</MinValue>
				<MaxValue>360.0</MaxValue>
				<Parameters>
					<Parameter>
						<Name>Random</Name>
						<PrettyName>Random(+/-)</PrettyName>
						<Description>Amount of randomization for this parameter, as a fraction of the value. E.g, if random = 0.5 and the value is 5, the output value is randomized between [2.5, 7.5].</Description>
						<Type>Single</Type>
						<DefaultValue>0</DefaultValue>
						<ValueStep>0.01</ValueStep>
						<MinValue>0.0</MinValue>
						<MaxValue>1.0</MaxValue>
					</Parameter>
				</Parameters>
			</Parameter>
			<Parameter>
				<Name>OffsetX</Name>
				<PrettyName>Offset X</PrettyName>
				<Description>Positional offset from the span location, in X direction.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>0.0</DefaultValue>				
				<ValueStep>1.0</ValueStep>
				<MinValue>0.0</MinValue>
				<Parameters>
					<Parameter>
						<Name>Random</Name>
						<PrettyName>Random(+/-)</PrettyName>
						<Description>Amount of randomization for this parameter, as a fraction of the value. I.e, if random = 0.5 and the value is 5, the output value is randomized between [2.5, 7.5].</Description>
						<Type>Single</Type>
						<DefaultValue>0</DefaultValue>
						<ValueStep>0.01</ValueStep>
						<MinValue>0.0</MinValue>
						<MaxValue>1.0</MaxValue>
					</Parameter>
				</Parameters>
			</Parameter>
			<Parameter>
				<Name>OffsetY</Name>
				<PrettyName>Offset Y</PrettyName>
				<Description>Positional offset from the span location, in Y direction.</Description>
				<Category>Emitter</Category>
				<Type>Single</Type>
				<DefaultValue>0.0</DefaultValue>				
				<ValueStep>1.0</ValueStep>
				<MinValue>0.0</MinValue>
				<Parameters>
					<Parameter>
						<Name>Random</Name>
						<PrettyName>Random(+/-)</PrettyName>
						<Description>Amount of randomization for this parameter, as a fraction of the value. I.e, if random = 0.5 and the value is 5, the output value is randomized between [2.5, 7.5].</Description>
						<Type>Single</Type>
						<DefaultValue>0</DefaultValue>
						<ValueStep>0.01</ValueStep>
						<MinValue>0.0</MinValue>
						<MaxValue>1.0</MaxValue>
					</Parameter>
				</Parameters>
			</Parameter>
			<Parameter>
				<Name>SortMode</Name>
				<PrettyName>Sort Mode</PrettyName>
				<Description>How particles will be sorted before being drawn.</Description>
				<Category>Drawing</Category>
				<Type>Int32</Type>
				<DefaultValue>0</DefaultValue>
				<ValueList>
					<Value Name="Unsorted" Value="0"/>
					<Value Name="Sorted Top" Value="1"/>
					<Value Name="Sorted Bottom" Value="2"/>
				</ValueList>
			</Parameter>
			<Parameter>
				<Name>BlendMode</Name>
				<PrettyName>Blend Mode</PrettyName>
				<Description>Which blending mode to use when rendering this effect.</Description>
				<Category>Drawing</Category>
				<Type>Int32</Type>
				<DefaultValue>1</DefaultValue>
				<ValueList>
					<Value Name="Opaque" Value="0"/>
					<Value Name="Alpha" Value="1"/>
					<Value Name="Additive" Value="3"/>
				</ValueList>
			</Parameter>
		</Parameters>
	</ParticleDeclaration>
</ParticleDeclarationTable>